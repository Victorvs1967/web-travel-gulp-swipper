section.cta
  .container
    .cta__wrapper
      img(src="@img/subscribe/subscribe-pin-bg.svg", alt="point")
      .cta__text
        h2.cta__text-title Join our newsletter to stay up to date
        p.cta__text-desc Stay connected with our brand
      form.cta__form(action="")
        input(type="email", placeholder="Enter your email", autocomplete="false").cta__form-input
        button(type="submit").btn.cta__form-btn Subscribe
